
@{
    Layout = null;
}

@model Order_Food.Models.Description
<input type="text" id="get_des_val">

<input type="submit" id="get_description" class="w3-button w3-dark-grey" value="ตกลง">
<script>
    $(document).ready(function () {
        $("#get_description").click(function () {
            var get_descript = {
                description1: $("#get_des_val").val() ,
                edit_value: "show"
            };
            $.ajax({
                    url: "@Url.Action("Add_description", "UsingU")",
                    type: "POST",
                    contentType: "application/json",
                data: JSON.stringify({ get_description: get_descript}),
                    success: function (response) {
                        response ? re() : alert("It didn't work.");
                    }
                });

        });
        function re() {
            $("#re_menu").load("http://localhost:55400/UsingU/Add_description");
        }
        });


</script>